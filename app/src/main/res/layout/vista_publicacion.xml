<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
            android:id="@+id/cv_publicacion"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            android:focusable="true"
            android:clickable="true"
            app:cardElevation="@dimen/card_elevation"
            app:cardCornerRadius="@dimen/card_radius"
            app:cardUseCompatPadding="true"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/pub_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="16dp">

                    <TextView
                        android:id="@+id/pub_titulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="@dimen/card_titulo"
                        android:textColor="@color/grey_800" />

                    <TextView
                        android:id="@+id/pub_fecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:textSize="@dimen/card_fecha"
                        android:textColor="@color/grey_800"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/pub_referencia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/grey_800"
                        android:textSize="@dimen/card_referencia"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/pub_contenido"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="@dimen/card_contenido"
                        android:textColor="@color/grey_800" />

                </LinearLayout>

                <Button
                    android:id="@+id/pub_btn_agregar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/save"
                    style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_below="@id/pub_linear"
                    android:layout_marginStart="8dp"
                    android:textSize="@dimen/card_fecha"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
